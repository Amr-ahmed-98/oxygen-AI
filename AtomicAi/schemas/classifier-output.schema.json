{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ClassifierOutput",
  "description": "Output schema for prompt classifier",
  "type": "object",
  "required": ["productType", "platforms", "rtl", "keywords", "persona", "vertical", "deliveryMode", "deployment"],
  "properties": {
    "productType": {
      "type": "string",
      "enum": [
        "CRM",
        "HRMS_HCM",
        "WMS_TMS",
        "POS",
        "CMS_DXP",
        "LMS",
        "ECOMMERCE",
        "MARKETPLACE",
        "BOOKING",
        "HELPDESK_ITSM",
        "PROJECT_WORK",
        "BI_ANALYTICS",
        "CPQ",
        "BILLING_SUBSCRIPTION",
        "IAM",
        "EAM_CMMS",
        "GENERAL_SAAS"
      ],
      "description": "Product type classification"
    },
    "deliveryMode": {
      "type": "string",
      "enum": ["multiTenantSaaS", "singleTenant", "onPremise", "hybrid"],
      "description": "Delivery mode"
    },
    "deployment": {
      "type": "string",
      "enum": ["cloudNative", "onPremise", "hybrid"],
      "description": "Deployment architecture"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["web", "mobile", "desktop"]
      },
      "minItems": 1,
      "description": "Target platforms"
    },
    "rtl": {
      "type": "boolean",
      "description": "Right-to-left language support"
    },
    "persona": {
      "type": "string",
      "enum": [
        "enterprise",
        "minimal",
        "glass",
        "warm",
        "brutal",
        "fintech",
        "gov",
        "powerUser",
        "general"
      ],
      "description": "Design persona/style"
    },
    "vertical": {
      "type": "string",
      "enum": [
        "general",
        "healthtech",
        "fintech",
        "edtech",
        "govtech",
        "proptech",
        "legaltech",
        "retailtech",
        "agritech"
      ],
      "description": "Industry vertical"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 40,
      "description": "Extracted keywords from prompt"
    },
    "mustHave": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Required features/modules"
    },
    "constraints": {
      "type": "object",
      "properties": {
        "noExternalCDN": {
          "type": "boolean",
          "default": false
        },
        "offlineFirst": {
          "type": "boolean",
          "default": false
        },
        "sso": {
          "type": "boolean",
          "default": false
        },
        "headless": {
          "type": "boolean",
          "default": false
        },
        "strictAudit": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false,
      "description": "Technical constraints"
    }
  },
  "additionalProperties": false
}

