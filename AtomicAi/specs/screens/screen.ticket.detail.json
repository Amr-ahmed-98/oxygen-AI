{
  "screenId": "screen.ticket.detail",
  "title": "تفاصيل التذكرة",
  "intent": "entityDetail",
  "entity": "Ticket",
  "type": "detail",
  "breadcrumbs": [
    {"label": "الصفحة الرئيسية", "path": "/"},
    {"label": "التذاكر", "path": "/tickets"},
    {"label": "تفاصيل التذكرة"}
  ],
  "view": {
    "web": {
      "layout": "detailWithRightPanel",
      "rightPanel": ["assignee", "status", "priority", "tags", "slaTimers"]
    },
    "mobile": {
      "layout": "tabsTop",
      "primaryTab": "conversation"
    },
    "desktop": {
      "layout": "detailWithRightPanel",
      "rightPanel": ["assignee", "status", "priority", "tags", "slaTimers"],
      "shortcuts": true
    }
  },
  "tabs": [
    {
      "id": "overview",
      "label": "نظرة عامة",
      "component": "ticketOverview"
    },
    {
      "id": "conversation",
      "label": "المحادثة",
      "component": "ticketConversation",
      "default": true
    },
    {
      "id": "activity",
      "label": "النشاط",
      "component": "activityTimeline"
    },
    {
      "id": "sla",
      "label": "SLA",
      "component": "slaTimers"
    },
    {
      "id": "related",
      "label": "ذات الصلة",
      "component": "relatedTickets"
    }
  ],
  "actions": [
    {
      "id": "edit",
      "label": "تعديل",
      "variant": "secondary",
      "permission": "ticket.edit"
    },
    {
      "id": "assign",
      "label": "تعيين",
      "variant": "secondary",
      "permission": "ticket.assign"
    },
    {
      "id": "comment",
      "label": "إضافة تعليق",
      "variant": "primary",
      "permission": "ticket.comment"
    },
    {
      "id": "close",
      "label": "إغلاق",
      "variant": "destructive",
      "permission": "ticket.close",
      "confirm": {
        "title": "إغلاق التذكرة",
        "message": "هل أنت متأكد من إغلاق هذه التذكرة؟"
      }
    }
  ],
  "states": {
    "loading": true,
    "error": true,
    "noPermission": {
      "message": "ليس لديك صلاحية لعرض هذه التذكرة"
    }
  }
}

