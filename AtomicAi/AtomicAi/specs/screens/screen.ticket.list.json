{
  "screenId": "screen.ticket.list",
  "title": "التذاكر",
  "intent": "ticketQueue",
  "entity": "Ticket",
  "type": "list",
  "breadcrumbs": [
    {"label": "الصفحة الرئيسية", "path": "/"},
    {"label": "التذاكر"}
  ],
  "view": {
    "web": {
      "layout": "dataTablePro",
      "queueSidebar": true,
      "virtualization": true,
      "columns": [
        {"field": "ticketNo", "label": "رقم التذكرة", "sortable": true, "width": "120px"},
        {"field": "subject", "label": "الموضوع", "sortable": true},
        {"field": "status", "label": "الحالة", "format": "badge"},
        {"field": "priority", "label": "الأولوية", "format": "badge"},
        {"field": "requesterId", "label": "طالب الخدمة"},
        {"field": "assigneeId", "label": "المكلف"},
        {"field": "firstResponseDueAt", "label": "موعد الرد", "format": "datetime"}
      ]
    },
    "mobile": {
      "layout": "cardList",
      "filters": "bottomSheet",
      "quickActions": true,
      "pullToRefresh": true,
      "cardFields": ["ticketNo", "subject", "status", "priority", "firstResponseDueAt"]
    },
    "desktop": {
      "layout": "dataTablePro",
      "queueSidebar": true,
      "contextMenu": true,
      "shortcuts": true,
      "multiSelect": true
    }
  },
  "toolbar": {
    "web": ["search", "filters", "savedViews", "columns", "export"],
    "mobile": ["search", "create"],
    "desktop": ["search", "filters", "savedViews", "columns", "export", "bulkActions"]
  },
  "actions": [
    {
      "id": "create",
      "label": "تذكرة جديدة",
      "variant": "primary",
      "permission": "ticket.create"
    },
    {
      "id": "assign",
      "label": "تعيين",
      "variant": "secondary",
      "permission": "ticket.assign",
      "requiresSelection": true
    },
    {
      "id": "bulkChangeStatus",
      "label": "تغيير الحالة",
      "variant": "secondary",
      "permission": "ticket.edit",
      "requiresSelection": true
    }
  ],
  "states": {
    "loading": true,
    "empty": {
      "title": "لا توجد تذاكر",
      "description": "ابدأ بإنشاء أول تذكرة",
      "action": {
        "label": "تذكرة جديدة",
        "permission": "ticket.create"
      }
    },
    "error": true,
    "noPermission": {
      "message": "ليس لديك صلاحية لعرض التذاكر"
    }
  }
}

