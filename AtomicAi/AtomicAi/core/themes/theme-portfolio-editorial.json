{
  "id": "theme-portfolio-editorial",
  "name": "Portfolio Editorial",
  "description": "Editorial-style portfolio theme with elegant typography and refined spacing",
  "category": ["portfolio", "editorial", "elegant"],
  "tags": ["portfolio", "blog", "editorial", "creative"],
  
  "foundations": {
    "colors": {
      "primary": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#e5e5e5",
        "300": "#d4d4d4",
        "400": "#a3a3a3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717"
      },
      "accent": {
        "50": "#fef3c7",
        "100": "#fde68a",
        "500": "#f59e0b",
        "600": "#d97706",
        "700": "#b45309"
      },
      "neutral": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#e5e5e5",
        "300": "#d4d4d4",
        "400": "#a3a3a3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717"
      },
      "semantic": {
        "success": {
          "50": "#f0fdf4",
          "500": "#10b981",
          "600": "#059669"
        },
        "warning": {
          "50": "#fffbeb",
          "500": "#f59e0b",
          "600": "#d97706"
        },
        "error": {
          "50": "#fef2f2",
          "500": "#ef4444",
          "600": "#dc2626"
        },
        "info": {
          "50": "#eff6ff",
          "500": "#3b82f6",
          "600": "#2563eb"
        }
      },
      "background": {
        "default": "#ffffff",
        "secondary": "#fafafa",
        "tertiary": "#f5f5f5"
      },
      "text": {
        "primary": "#171717",
        "secondary": "#525252",
        "tertiary": "#737373",
        "inverse": "#ffffff"
      }
    },
    
    "typography": {
      "fontFamily": {
        "sans": ["Crimson Text", "Georgia", "serif"],
        "serif": ["Crimson Text", "Georgia", "serif"],
        "mono": ["Inconsolata", "Monaco", "monospace"]
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1.125rem",
        "lg": "1.25rem",
        "xl": "1.5rem",
        "2xl": "2rem",
        "3xl": "2.5rem",
        "4xl": "3rem",
        "5xl": "3.75rem",
        "6xl": "4.5rem"
      },
      "fontWeight": {
        "light": "300",
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      },
      "lineHeight": {
        "tight": "1.3",
        "normal": "1.7",
        "relaxed": "1.9",
        "loose": "2.2"
      },
      "letterSpacing": {
        "tight": "-0.02em",
        "normal": "0",
        "wide": "0.02em"
      }
    },
    
    "spacing": {
      "scale": "1.5",
      "base": "1rem",
      "values": {
        "0": "0",
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.5rem",
        "6": "2rem",
        "8": "3rem",
        "10": "4rem",
        "12": "5rem",
        "16": "7rem",
        "20": "9rem",
        "24": "11rem",
        "32": "15rem"
      }
    },
    
    "borderRadius": {
      "system": "rounded",
      "none": "0",
      "sm": "0.125rem",
      "base": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "full": "9999px"
    },
    
    "shadows": {
      "system": "soft",
      "none": "none",
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.03)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.05), 0 1px 2px 0 rgba(0, 0, 0, 0.03)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.08), 0 4px 6px -2px rgba(0, 0, 0, 0.04)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },
    
    "motion": {
      "duration": {
        "fast": "200ms",
        "base": "300ms",
        "slow": "500ms",
        "slower": "700ms"
      },
      "easing": {
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "prefersReducedMotion": true
    }
  },
  
  "density": {
    "mode": "airy",
    "spacingMultiplier": 1.75,
    "componentHeight": "comfortable"
  },
  
  "darkMode": {
    "enabled": true,
    "strategy": "class",
    "colors": {
      "background": {
        "default": "#0a0a0a",
        "secondary": "#171717",
        "tertiary": "#262626"
      },
      "text": {
        "primary": "#f5f5f5",
        "secondary": "#d4d4d4",
        "tertiary": "#a3a3a3"
      }
    }
  },
  
  "rtl": {
    "enabled": true,
    "supported": true
  }
}

