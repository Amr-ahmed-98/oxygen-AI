{
  "id": "shell.header",
  "type": "section",
  "category": ["app-shell", "layout"],
  "name": "App Shell - Header",
  "description": "Application header with breadcrumbs, actions, and user menu",
  "variants": [
    "with-breadcrumbs",
    "minimal",
    "with-search",
    "transparent"
  ],
  "props": {
    "variant": {
      "type": "string",
      "required": false,
      "default": "with-breadcrumbs",
      "range": ["with-breadcrumbs", "minimal", "with-search", "transparent"],
      "description": "Header variant"
    },
    "height": {
      "type": "string",
      "required": false,
      "default": "64px",
      "description": "Header height"
    },
    "sticky": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Sticky header"
    },
    "showBreadcrumbs": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Show breadcrumbs"
    },
    "showSearch": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Show global search"
    },
    "showNotifications": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Show notifications icon"
    },
    "showUserMenu": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Show user menu"
    }
  },
  "slots": {
    "breadcrumbs": {
      "type": "array",
      "required": false,
      "itemType": "breadcrumb",
      "description": "Breadcrumb items",
      "itemSchema": {
        "label": {"type": "string", "required": true},
        "href": {"type": "string", "required": false}
      }
    },
    "title": {
      "type": "string",
      "required": false,
      "maxLen": 100,
      "description": "Page title (alternative to breadcrumbs)"
    },
    "actions": {
      "type": "array",
      "required": false,
      "itemType": "action",
      "description": "Header action buttons",
      "itemSchema": {
        "id": {"type": "string", "required": true},
        "label": {"type": "string", "required": true},
        "icon": {"type": "string", "required": false},
        "variant": {"type": "string", "range": ["primary", "secondary", "ghost"]},
        "permission": {"type": "string", "required": false}
      }
    },
    "search": {
      "type": "component",
      "required": false,
      "description": "Global search component"
    },
    "notifications": {
      "type": "component",
      "required": false,
      "description": "Notifications dropdown/panel"
    },
    "userMenu": {
      "type": "component",
      "required": false,
      "description": "User menu dropdown"
    }
  },
  "constraints": {
    "breadcrumbsOrTitleRequired": true
  },
  "a11y": {
    "breadcrumbsHaveNav": true,
    "keyboardNavigation": true,
    "focusVisible": true
  },
  "responsive": {
    "mobile": {
      "height": "56px",
      "showBreadcrumbs": false,
      "variant": "minimal"
    },
    "tablet": {
      "height": "64px",
      "showBreadcrumbs": true
    },
    "desktop": {
      "height": "64px",
      "showBreadcrumbs": true
    }
  },
  "dependencies": [
    "breadcrumb",
    "button",
    "avatar",
    "menu",
    "icon"
  ],
  "whenToUse": [
    "Application header",
    "SaaS/ERP dashboard header",
    "Pages with breadcrumbs and actions"
  ],
  "whenNotToUse": [
    "Marketing sites",
    "Landing pages",
    "Full-screen views"
  ],
  "tags": ["app-shell", "header", "breadcrumbs", "saas", "erp"]
}

