{
  "version": "1.0.0",
  "description": "Platform-specific defaults to reduce LLM decisions",
  "defaults": {
    "web": {
      "listLayout": "dataTablePro",
      "detailLayout": "detailWithRightPanel",
      "formLayout": "pageForm",
      "filters": "inline",
      "navigation": "sidebar",
      "pagination": "server",
      "density": "comfortable",
      "virtualized": true,
      "features": {
        "breadcrumbs": true,
        "toolbar": true,
        "bulkActions": true,
        "savedViews": true,
        "columnVisibility": true,
        "export": true
      }
    },
    "mobile": {
      "listLayout": "cardList",
      "detailLayout": "tabsTop",
      "formLayout": "fullScreen",
      "filters": "bottomSheet",
      "navigation": "tabs+stack",
      "pagination": "infinite",
      "density": "compact",
      "virtualized": true,
      "pullToRefresh": true,
      "features": {
        "breadcrumbs": false,
        "toolbar": true,
        "bulkActions": false,
        "savedViews": false,
        "swipeActions": true,
        "quickActions": true
      },
      "constraints": {
        "maxTableColumns": 3,
        "longFormUseStepper": 10,
        "hideComplexFilters": true
      }
    },
    "desktop": {
      "listLayout": "dataTablePro",
      "detailLayout": "detailWithRightPanel",
      "formLayout": "modal",
      "filters": "inline",
      "navigation": "sidebar+menubar",
      "pagination": "server",
      "density": "comfortable",
      "virtualized": true,
      "shortcuts": true,
      "contextMenu": true,
      "multiSelect": true,
      "features": {
        "breadcrumbs": true,
        "toolbar": true,
        "bulkActions": true,
        "savedViews": true,
        "columnVisibility": true,
        "export": true,
        "keyboardShortcuts": true,
        "contextMenu": true,
        "multiWindow": true
      }
    }
  },
  "intentMappings": {
    "entityList": {
      "web": {
        "component": "data.table.pro",
        "props": {
          "pagination": "server",
          "sortable": true,
          "filterable": true,
          "virtualized": true
        }
      },
      "mobile": {
        "component": "data.list.cards",
        "props": {
          "pullToRefresh": true,
          "virtualized": true,
          "swipeActions": true
        }
      },
      "desktop": {
        "component": "data.table.pro",
        "props": {
          "pagination": "server",
          "sortable": true,
          "filterable": true,
          "virtualized": true,
          "shortcuts": true,
          "contextMenu": true,
          "multiSelect": true
        }
      }
    },
    "entityDetail": {
      "web": {
        "component": "data.detail.tabs",
        "props": {
          "layout": "detailWithRightPanel",
          "rightPanel": ["status", "assignee", "tags", "metadata"]
        }
      },
      "mobile": {
        "component": "data.detail.tabs",
        "props": {
          "layout": "tabsTop",
          "primaryTab": "overview"
        }
      },
      "desktop": {
        "component": "data.detail.tabs",
        "props": {
          "layout": "detailWithRightPanel",
          "rightPanel": ["status", "assignee", "tags", "metadata", "audit"],
          "shortcuts": true
        }
      }
    },
    "entityForm": {
      "web": {
        "component": "form.builder.schemaDriven",
        "props": {
          "layout": "twoColumn",
          "validation": "schemaDriven"
        }
      },
      "mobile": {
        "component": "form.stepper",
        "props": {
          "condition": { "fieldCount": { "$gt": 10 } }
        }
      },
      "desktop": {
        "component": "form.drawerEdit",
        "props": {
          "layout": "twoColumn",
          "validation": "schemaDriven"
        }
      }
    },
    "workflowApproval": {
      "web": {
        "component": "data.table.pro",
        "props": {
          "pagination": "server",
          "bulkActions": ["approve", "reject"]
        }
      },
      "mobile": {
        "component": "data.list.cards",
        "props": {
          "quickActions": ["approve", "reject"]
        }
      },
      "desktop": {
        "component": "data.table.pro",
        "props": {
          "pagination": "server",
          "bulkActions": ["approve", "reject", "delegate"],
          "shortcuts": true
        }
      }
    }
  },
  "entityViewRules": {
    "listView": {
      "if": { "entity.views.list.layout": "dataTable" },
      "then": {
        "web": { "layout": "dataTablePro" },
        "mobile": { "layout": "cardList" },
        "desktop": { "layout": "dataTablePro" }
      }
    },
    "formView": {
      "if": { "entity.fields.length": { "$gt": 10 } },
      "then": {
        "mobile": { "layout": "stepper" }
      }
    },
    "detailView": {
      "if": { "entity.views.detail.tabs": true },
      "then": {
        "web": { "layout": "detailWithRightPanel" },
        "mobile": { "layout": "tabsTop" },
        "desktop": { "layout": "detailWithRightPanel" }
      }
    }
  }
}

