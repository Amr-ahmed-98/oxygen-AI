{
  "id": "filter.builder",
  "type": "component",
  "category": ["data-ui", "filter"],
  "name": "Filter Builder",
  "description": "Advanced filter builder with AND/OR groups, saved views, and multiple filter types",
  "variants": [
    "simple",
    "advanced",
    "saved-views",
    "inline"
  ],
  "props": {
    "variant": {
      "type": "string",
      "required": false,
      "default": "simple",
      "range": ["simple", "advanced", "saved-views"],
      "description": "Filter builder variant"
    },
    "fields": {
      "type": "array",
      "required": true,
      "itemType": "filterField",
      "description": "Available filter fields",
      "itemSchema": {
        "id": {"type": "string", "required": true},
        "label": {"type": "string", "required": true},
        "type": {
          "type": "string",
          "range": ["text", "number", "date", "dateRange", "enum", "boolean", "relation"]
        },
        "options": {"type": "array", "required": false}
      }
    },
    "showSavedViews": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Show saved filter views"
    },
    "allowGroups": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Allow AND/OR groups"
    },
    "maxFilters": {
      "type": "number",
      "required": false,
      "description": "Maximum number of filters"
    }
  },
  "slots": {
    "value": {
      "type": "object",
      "required": false,
      "description": "Current filter values"
    },
    "savedViews": {
      "type": "array",
      "required": false,
      "itemType": "savedView",
      "description": "Saved filter views"
    }
  },
  "dependencies": [
    "input",
    "select",
    "datePicker",
    "button",
    "menu"
  ],
  "whenToUse": [
    "Advanced data filtering",
    "Complex search criteria",
    "Saved filter views",
    "Data tables with filters"
  ],
  "tags": ["filter", "search", "data", "table"]
}

