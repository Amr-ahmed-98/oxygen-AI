{
  "packId": "lms",
  "name": "LMS - Learning Management System",
  "productType": "LMS",
  "defaultAudience": "B2B",
  "primaryPatterns": [
    "pattern.learningCoursePlayer",
    "pattern.courseCatalog",
    "pattern.progressTracking",
    "pattern.assessmentQuiz"
  ],
  "coreModules": [
    "core.auth",
    "core.rbac",
    "core.tenants",
    "core.notifications"
  ],
  "modules": [
    {
      "moduleId": "lms.courses",
      "title": "Courses",
      "entities": ["Course", "Lesson", "Module"],
      "required": true
    },
    {
      "moduleId": "lms.enrollments",
      "title": "Enrollments",
      "entities": ["Enrollment", "Student", "Progress"],
      "required": true
    },
    {
      "moduleId": "lms.assessments",
      "title": "Assessments",
      "entities": ["Quiz", "Question", "Submission", "Grade"],
      "required": true
    },
    {
      "moduleId": "lms.certificates",
      "title": "Certificates",
      "entities": ["Certificate", "Badge"],
      "required": false
    },
    {
      "moduleId": "lms.authoring",
      "title": "Content Authoring",
      "entities": ["Content", "Media", "Transcript"],
      "required": false
    }
  ],
  "workflows": [
    "workflow.enrollment",
    "workflow.completion",
    "workflow.certification"
  ],
  "integrations": [
    "video",
    "scorm",
    "payment"
  ],
  "platformAdapters": {
    "mobile": {
      "emphasize": ["coursePlayer", "progress", "notifications"],
      "avoid": ["authoring"]
    },
    "desktop": {
      "emphasize": ["authoring", "bulkOps", "analytics"]
    }
  }
}

