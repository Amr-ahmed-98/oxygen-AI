{
  "packId": "hrms",
  "name": "HRMS / HCM - Human Resource Management System",
  "productType": "HRMS_HCM",
  "defaultAudience": "B2B",
  "primaryPatterns": [
    "pattern.entityCrud",
    "pattern.approvalWorkflow",
    "pattern.calendarScheduler",
    "pattern.reportingDashboards",
    "pattern.orgChart"
  ],
  "coreModules": [
    "core.auth",
    "core.rbac",
    "core.tenants",
    "core.auditLogs",
    "core.notifications",
    "core.settings",
    "core.importExport"
  ],
  "modules": [
    {
      "moduleId": "hr.employee",
      "title": "Employees",
      "entities": ["Employee", "Department", "Position", "OrgChart"],
      "required": true
    },
    {
      "moduleId": "hr.attendance",
      "title": "Attendance",
      "entities": ["AttendanceRecord", "Shift", "TimeCard"],
      "required": true
    },
    {
      "moduleId": "hr.leave",
      "title": "Leave Management",
      "entities": ["LeaveRequest", "LeavePolicy", "LeaveBalance"],
      "required": true
    },
    {
      "moduleId": "hr.payroll",
      "title": "Payroll",
      "entities": ["PayrollRun", "Payslip", "SalaryComponent"],
      "required": false
    },
    {
      "moduleId": "hr.recruiting",
      "title": "Recruiting",
      "entities": ["Job", "Candidate", "Application", "Interview"],
      "required": false
    },
    {
      "moduleId": "hr.appraisals",
      "title": "Performance",
      "entities": ["Appraisal", "Goal", "Review"],
      "required": false
    }
  ],
  "workflows": [
    "workflow.leaveApproval",
    "workflow.expenseApproval",
    "workflow.recruitmentPipeline"
  ],
  "integrations": [
    "payroll",
    "biometric",
    "email"
  ],
  "sensitiveData": {
    "fieldMasking": true,
    "auditRequired": true,
    "defaultRetentionDays": 3650,
    "piiFields": ["salary", "bankAccount", "ssn", "passport"]
  },
  "platformAdapters": {
    "mobile": {
      "emphasize": ["checkInCheckOut", "leaveRequest", "approvals"],
      "avoid": ["payrollDetails", "sensitiveReports"]
    },
    "desktop": {
      "emphasize": ["bulkOps", "payrollProcessing", "advancedReports"]
    }
  }
}

