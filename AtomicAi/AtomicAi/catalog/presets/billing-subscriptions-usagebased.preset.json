{
  "presetId": "billing-subscriptions-usagebased",
  "title": "Billing & Subscriptions (Usage-based)",
  "description": "Complete billing platform with usage-based metering",
  "productType": "BILLING_SUBSCRIPTION",
  "vertical": null,
  "audience": "B2B",
  "delivery": {
    "mode": "multiTenantSaaS",
    "architecture": "microservices",
    "deployment": "cloudNative",
    "headless": true,
    "pwa": false,
    "desktop": false,
    "platformMode": "apiFirst"
  },
  "businessModel": {
    "type": "usageBased",
    "billing": "subscription",
    "plans": ["Free", "Pro", "Enterprise"],
    "metering": "usageBased"
  },
  "app": {
    "name": "BillingAPI",
    "platforms": ["web"],
    "locale": {
      "default": "en-US",
      "rtl": false,
      "supported": ["en-US"]
    },
    "themePack": "theme-saas-modern",
    "density": "comfortable"
  },
  "security": {
    "multiTenant": true,
    "auth": {
      "method": "api_key",
      "twoFactor": false,
      "sso": false
    },
    "rbac": true
  },
  "modules": [
    "billing.plans",
    "billing.subscriptions",
    "billing.invoices",
    "billing.metering",
    "core.apiKeys",
    "core.webhooks",
    "core.sdkDocs",
    "core.tenants"
  ],
  "roles": [
    {
      "id": "admin",
      "name": "Administrator",
      "permissions": ["*"]
    },
    {
      "id": "developer",
      "name": "Developer",
      "permissions": [
        "subscription.view",
        "subscription.manage",
        "usage.view",
        "invoice.view",
        "apiKey.manage"
      ]
    },
    {
      "id": "finance",
      "name": "Finance",
      "permissions": [
        "invoice.view",
        "invoice.manage",
        "payment.view",
        "report.view"
      ]
    }
  ],
  "features": [
    "usageMetering",
    "usageDashboard",
    "quotaWarnings",
    "apiKeys",
    "webhooks",
    "sdkDocs",
    "integrationCenter"
  ]
}

