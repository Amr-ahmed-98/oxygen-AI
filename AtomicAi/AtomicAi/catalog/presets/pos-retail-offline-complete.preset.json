{
  "presetId": "pos-retail-offline-complete",
  "title": "POS Retail (Offline-first)",
  "description": "Complete POS system with offline-first sync and device integrations",
  "productType": "POS",
  "vertical": "RetailTech",
  "audience": "B2C",
  "delivery": {
    "mode": "hybrid",
    "architecture": "modularMonolith",
    "deployment": "cloudNative",
    "headless": false,
    "pwa": true,
    "desktop": "tauri",
    "platformMode": "standard"
  },
  "businessModel": {
    "type": "subscription",
    "billing": "subscription",
    "plans": ["Basic", "Pro", "Enterprise"],
    "metering": "storeBased"
  },
  "app": {
    "name": "RetailPOS",
    "platforms": ["mobile", "desktop"],
    "locale": {
      "default": "en-US",
      "rtl": false,
      "supported": ["en-US"]
    },
    "themePack": "theme-retail-compact",
    "density": "compact"
  },
  "security": {
    "multiTenant": false,
    "auth": {
      "method": "email_password",
      "twoFactor": false,
      "sso": false
    },
    "rbac": true
  },
  "modules": [
    "core.auth",
    "core.rbac",
    "core.sync",
    "core.auditLogs",
    "pos.catalog",
    "pos.orders",
    "pos.shifts",
    "pos.customers",
    "pos.reports"
  ],
  "roles": [
    {
      "id": "admin",
      "name": "Administrator",
      "permissions": ["*"]
    },
    {
      "id": "cashier",
      "name": "Cashier",
      "permissions": [
        "order.create",
        "order.view",
        "product.view",
        "customer.view",
        "customer.create",
        "shift.view"
      ]
    },
    {
      "id": "manager",
      "name": "Manager",
      "permissions": [
        "order.*",
        "product.*",
        "customer.*",
        "shift.*",
        "report.view"
      ]
    }
  ],
  "features": [
    "offlineFirst",
    "syncQueue",
    "barcodeScanning",
    "receiptPrint",
    "cashDrawer",
    "paymentGateway"
  ],
  "offlineFirst": true,
  "syncRequired": true
}

