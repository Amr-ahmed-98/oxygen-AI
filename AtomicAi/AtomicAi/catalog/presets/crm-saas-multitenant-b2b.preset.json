{
  "presetId": "crm-saas-multitenant-b2b",
  "title": "CRM SaaS Multi-tenant B2B",
  "description": "Modern CRM SaaS platform with multi-tenant support for B2B",
  "productType": "CRM",
  "vertical": null,
  "audience": "B2B",
  "delivery": {
    "mode": "multiTenantSaaS",
    "architecture": "microservices",
    "deployment": "cloudNative",
    "headless": false,
    "pwa": true,
    "desktop": false,
    "platformMode": "standard"
  },
  "businessModel": {
    "type": "subscription",
    "billing": "subscription",
    "plans": ["Starter", "Professional", "Enterprise"],
    "metering": "seatBased"
  },
  "app": {
    "name": "ApexCRM",
    "platforms": ["web", "mobile"],
    "locale": {
      "default": "en-US",
      "rtl": false,
      "supported": ["en-US", "ar-EG"]
    },
    "themePack": "theme-saas-modern",
    "density": "comfortable"
  },
  "security": {
    "multiTenant": true,
    "auth": {
      "method": "email_password",
      "twoFactor": true,
      "sso": true
    },
    "rbac": true
  },
  "modules": [
    "crm.leads",
    "crm.contacts",
    "crm.accounts",
    "crm.deals",
    "crm.activities",
    "crm.reports",
    "core.tenants",
    "core.billing",
    "core.auth",
    "core.rbac"
  ],
  "roles": [
    {
      "id": "admin",
      "name": "Administrator",
      "permissions": ["*"]
    },
    {
      "id": "sales_manager",
      "name": "Sales Manager",
      "permissions": [
        "lead.*",
        "contact.*",
        "account.*",
        "deal.*",
        "activity.*",
        "report.*"
      ]
    },
    {
      "id": "sales_rep",
      "name": "Sales Representative",
      "permissions": [
        "lead.view",
        "lead.create",
        "contact.view",
        "contact.create",
        "deal.view",
        "deal.create",
        "deal.edit.own",
        "activity.*"
      ]
    }
  ],
  "features": [
    "tenantSwitcher",
    "orgBranding",
    "planLimitsUI",
    "sso",
    "kanbanPipeline",
    "activityTimeline"
  ]
}

