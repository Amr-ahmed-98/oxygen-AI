{
  "version": "1.0.0",
  "description": "Diversity policy to ensure varied outputs",
  "strategies": {
    "layoutRotation": {
      "enabled": true,
      "description": "Rotate layouts (L1/L2/L3) across sections",
      "rules": [
        {
          "rule": "no_consecutive_same_layout",
          "description": "Avoid using same layout for consecutive sections"
        },
        {
          "rule": "distribute_layouts",
          "description": "Distribute L1/L2/L3 across page"
        }
      ]
    },
    "sectionVariety": {
      "enabled": true,
      "description": "Ensure variety in section types",
      "rules": [
        {
          "rule": "max_3_same_category",
          "description": "Max 3 sections from same category per page",
          "categories": ["hero", "features", "proof", "pricing", "faq-cta", "content"]
        },
        {
          "rule": "prefer_diverse_sections",
          "description": "Prefer sections not recently used"
        }
      ]
    },
    "decoratorRotation": {
      "enabled": true,
      "description": "Vary decorators across sections",
      "decorators": ["background", "divider", "badge", "mediaFrame", "emphasis"],
      "rules": [
        {
          "rule": "alternate_backgrounds",
          "description": "Alternate background styles (solid/gradient/pattern/glass)"
        },
        {
          "rule": "vary_emphasis",
          "description": "Vary emphasis levels across page"
        }
      ]
    },
    "themeVariation": {
      "enabled": true,
      "description": "Suggest theme variations for similar projects",
      "rules": [
        {
          "rule": "track_recent_themes",
          "description": "Track recently used themes",
          "historySize": 10
        },
        {
          "rule": "suggest_alternatives",
          "description": "Suggest alternative themes for similar product types"
        }
      ]
    },
    "componentVariation": {
      "enabled": true,
      "description": "Vary component choices when possible",
      "rules": [
        {
          "rule": "alternate_table_cards",
          "description": "Use both table and cards in lists when appropriate"
        },
        {
          "rule": "vary_form_layouts",
          "description": "Vary form layouts (oneColumn/twoColumn/stepper)"
        }
      ]
    }
  },
  "enforcement": {
    "strict": false,
    "description": "If strict, reject outputs that don't meet diversity rules",
    "warnings": true,
    "description": "If warnings, log diversity issues but don't reject"
  },
  "notes": "Diversity policy ensures ThemeForest-like variety across generations"
}

