{
  "pageId": "page.app.entityCrud",
  "label": "Entity CRUD Page",
  "description": "أي شاشة CRUD (List/Detail/Form)",
  "type": "app",
  "pattern": "pattern.entityCrud",
  "intents": [
    {
      "intent": "entityList",
      "view": {
        "web": {
          "layout": "data.table.pro",
          "toolbar": ["search", "filters", "columns", "export"],
          "savedViews": true
        },
        "mobile": {
          "layout": "data.list.cards",
          "filters": "bottomSheet"
        }
      }
    },
    {
      "intent": "entityDetail",
      "view": {
        "web": {
          "layout": "detailWithRightPanel",
          "rightPanel": ["status", "tags", "audit"]
        },
        "mobile": {
          "layout": "tabsTop"
        }
      }
    },
    {
      "intent": "entityForm",
      "view": {
        "web": {
          "layout": "form.builder.schemaDriven"
        },
        "mobile": {
          "layout": "form.stepper"
        }
      }
    }
  ],
  "props": {
    "list": {
      "savedViews": true,
      "export": true
    },
    "detail": {
      "rightPanel": true
    },
    "mobile": {
      "cardList": true,
      "filterSheet": true
    }
  },
  "bestThemes": ["erp-professional", "enterprise-dense"],
  "version": "1.0.0"
}

