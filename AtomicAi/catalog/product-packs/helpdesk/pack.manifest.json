{
  "packId": "helpdesk",
  "name": "Helpdesk / ITSM",
  "productType": "HELPDESK_ITSM",
  "defaultAudience": "B2B",
  "primaryPatterns": [
    "pattern.ticketingQueue",
    "pattern.kanbanPipeline",
    "pattern.knowledgeBase",
    "pattern.slaTimer"
  ],
  "coreModules": [
    "core.auth",
    "core.rbac",
    "core.tenants",
    "core.auditLogs",
    "core.notifications",
    "core.settings"
  ],
  "modules": [
    {
      "moduleId": "ticket.tickets",
      "title": "Tickets",
      "entities": ["Ticket", "TicketStatus", "TicketPriority", "SLA"],
      "required": true
    },
    {
      "moduleId": "ticket.agents",
      "title": "Agents",
      "entities": ["Agent", "Team", "Queue"],
      "required": true
    },
    {
      "moduleId": "ticket.knowledge",
      "title": "Knowledge Base",
      "entities": ["Article", "Category", "Tag"],
      "required": false
    },
    {
      "moduleId": "ticket.automation",
      "title": "Automation",
      "entities": ["Rule", "Trigger", "Action"],
      "required": false
    },
    {
      "moduleId": "ticket.assets",
      "title": "IT Assets",
      "entities": ["Asset", "AssetType", "Maintenance"],
      "required": false
    }
  ],
  "workflows": [
    "workflow.ticketAssignment",
    "workflow.slaEscalation",
    "workflow.autoResponse"
  ],
  "integrations": [
    "email",
    "slack",
    "webhook"
  ],
  "platformAdapters": {
    "mobile": {
      "emphasize": ["quickTicketCreate", "notifications", "agentMobile"],
      "avoid": ["complexAutomation"]
    },
    "desktop": {
      "emphasize": ["bulkOps", "automationBuilder", "advancedFilters"]
    }
  }
}

