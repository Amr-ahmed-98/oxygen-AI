{
  "packId": "crm",
  "name": "CRM - Customer Relationship Management",
  "productType": "CRM",
  "defaultAudience": "B2B",
  "primaryPatterns": [
    "pattern.entityCrud",
    "pattern.kanbanPipeline",
    "pattern.timelineActivity",
    "pattern.reportingDashboards"
  ],
  "coreModules": [
    "core.auth",
    "core.rbac",
    "core.tenants",
    "core.auditLogs",
    "core.notifications",
    "core.settings",
    "core.importExport",
    "core.reports"
  ],
  "modules": [
    {
      "moduleId": "crm.leads",
      "title": "Leads",
      "entities": ["Lead", "LeadSource", "LeadScore"],
      "required": true
    },
    {
      "moduleId": "crm.contacts",
      "title": "Contacts",
      "entities": ["Contact"],
      "required": true
    },
    {
      "moduleId": "crm.accounts",
      "title": "Accounts",
      "entities": ["Account", "AccountType"],
      "required": true
    },
    {
      "moduleId": "crm.deals",
      "title": "Deals",
      "entities": ["Deal", "DealStage", "DealPipeline"],
      "required": true
    },
    {
      "moduleId": "crm.activities",
      "title": "Activities",
      "entities": ["Activity", "Call", "Email", "Meeting", "Task"],
      "required": true
    },
    {
      "moduleId": "crm.reports",
      "title": "Reports",
      "entities": ["Report", "Dashboard"],
      "required": false
    }
  ],
  "workflows": [
    "workflow.leadToContact",
    "workflow.dealPipeline",
    "workflow.activityFollowUp"
  ],
  "integrations": [
    "email",
    "calendar",
    "phone"
  ],
  "sensitiveData": {
    "fieldMasking": false,
    "auditRequired": true,
    "defaultRetentionDays": 2555
  },
  "platformAdapters": {
    "mobile": {
      "emphasize": ["quickAdd", "activityLogging", "dealStatus"],
      "avoid": ["wideTables", "complexReports"]
    },
    "desktop": {
      "emphasize": ["bulkOps", "advancedFilters", "export", "shortcuts"]
    }
  }
}

