{
  "packId": "ecommerce",
  "name": "E-commerce Platform",
  "productType": "ECOMMERCE",
  "defaultAudience": "B2C",
  "primaryPatterns": [
    "pattern.catalogGrid",
    "pattern.cart",
    "pattern.checkout",
    "pattern.orderManagement",
    "pattern.productDetail"
  ],
  "coreModules": [
    "core.auth",
    "core.rbac",
    "core.settings",
    "core.notifications"
  ],
  "modules": [
    {
      "moduleId": "ecom.products",
      "title": "Products",
      "entities": ["Product", "Category", "Variant", "Inventory"],
      "required": true
    },
    {
      "moduleId": "ecom.orders",
      "title": "Orders",
      "entities": ["Order", "OrderItem", "Shipment"],
      "required": true
    },
    {
      "moduleId": "ecom.customers",
      "title": "Customers",
      "entities": ["Customer", "Address", "LoyaltyProgram"],
      "required": true
    },
    {
      "moduleId": "ecom.payments",
      "title": "Payments",
      "entities": ["Payment", "Transaction", "Refund"],
      "required": true
    },
    {
      "moduleId": "ecom.shipping",
      "title": "Shipping",
      "entities": ["Shipment", "ShippingMethod", "Tracking"],
      "required": false
    },
    {
      "moduleId": "ecom.reviews",
      "title": "Reviews",
      "entities": ["Review", "Rating"],
      "required": false
    }
  ],
  "workflows": [
    "workflow.checkout",
    "workflow.orderFulfillment",
    "workflow.returnRefund"
  ],
  "integrations": [
    "paymentGateway",
    "shipping",
    "inventory"
  ],
  "platformAdapters": {
    "mobile": {
      "emphasize": ["productGrid", "cart", "checkout", "orderTracking"],
      "avoid": ["bulkOps", "complexReports"]
    },
    "desktop": {
      "emphasize": ["bulkOps", "inventoryManagement", "orderManagement"]
    }
  }
}

