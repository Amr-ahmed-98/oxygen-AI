{
  "version": "1.0.0",
  "description": "Diversity policy to ensure varied outputs",
  "constraints": {
    "maxRepeatSameSectionTypeInRow": 2,
    "minLayoutsUsedPerPage": 2,
    "minDecoratorsUsedPerPage": 2,
    "avoidSameHeroAcrossRuns": true
  },
  "landingPolicy": {
    "heroPool": [
      "section.hero.split",
      "section.hero.centered",
      "section.hero.withStats",
      "section.hero.dashboardPreview",
      "section.hero.productTour"
    ],
    "requiredTypes": ["hero", "proof", "features", "pricingOrContact", "faqOrCta"],
    "sectionTypeMap": {
      "hero": ["section.hero.*"],
      "proof": ["section.proof.*"],
      "features": ["section.features.*"],
      "pricingOrContact": ["section.pricing.*", "section.contact.*"],
      "faqOrCta": ["section.faq.*", "section.cta.*"]
    }
  },
  "decorators": {
    "background": ["solid", "gradient", "pattern", "glass"],
    "divider": ["none", "wave", "angle"],
    "mediaFrame": ["none", "browser", "device"],
    "emphasis": ["normal", "high"]
  },
  "randomSeed": {
    "source": "promptHash",
    "salt": "v1"
  }
}

